<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:background="@color/charcoal">

	<TextView
		android:id="@+id/introduction"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:text="Welcome to our used car lot!"
		android:textSize="20sp"
		android:textStyle="bold"
	    android:textColor="@color/white"
		/>

	<LinearLayout
		android:layout_above="@+id/inventory"
		android:layout_below="@+id/introduction"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
	    android:orientation="vertical"
		>

		<Button
			android:id="@+id/pinto_car"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="@color/colorPrimary"
			android:padding="5dp"
			android:text="Add Pinto car"
			android:textColor="@color/white"
			android:layout_marginBottom="10dp"
			/>

		<Button
			android:id="@+id/semi_truck"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="@color/colorPrimary"
			android:padding="5dp"
			android:text="Add Semi Truck"
			android:textColor="@color/white"
		    android:layout_marginBottom="10dp"
			/>

		<Button
			android:id="@+id/funny_car"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="@color/colorPrimary"
			android:padding="5dp"
			android:text="Add Funny Car"
			android:textColor="@color/white"
			android:layout_marginBottom="10dp"
			/>

		<Button
			android:id="@+id/random_car"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:background="@color/colorPrimary"
			android:padding="5dp"
			android:text="Add Random Car"
			android:textColor="@color/white"
			android:layout_marginBottom="10dp"
			/>
	</LinearLayout>

	<Button
		android:id="@+id/inventory"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:background="@color/colorPrimary"
		android:padding="5dp"
		android:text="Take Inventory"
		android:textColor="@color/white"
		/>
</RelativeLayout>
